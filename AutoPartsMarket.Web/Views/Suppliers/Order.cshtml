@model Site.Data.Models.Order

@{
    ViewData["Title"] = "Index";
}

<h1>Order Product</h1>
<p>Ordering <strong>@Model.Product.Name</strong> product from <strong>@Model.Supplier.Company</strong> supplier. </p>
<hr>
<h4 class="mb-3">Details</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Order">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="SupplierId" />
            <input type="hidden" asp-for="ProductId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label> <span class="text-danger">*</span>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <p>Fields marked with '<span class="text-danger">*</span>' are required.</p>
            </div>
            <div class="form-group mt-2">
                <div class="d-flex flex-row">
                    <div class="pr-1">
                        <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@Model.SupplierId">Cancel</a>
                    </div>
                    <div class="pl-1">
                        <input type="submit" value="Order" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
