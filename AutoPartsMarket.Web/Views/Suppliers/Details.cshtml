@model Site.Data.Models.Supplier

@{
    ViewData["Title"] = "Index";
}

<h1>@Html.DisplayFor(model => model.Company) Supplier</h1>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-white px-0">
        <li class="breadcrumb-item">
            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-area="" asp-controller="Suppliers" asp-action="Index">Suppliers</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            @Html.DisplayFor(x => x.Company)
        </li>
    </ol>
</nav>
<hr>
<h4 class="mb-3">Details</h4>
<dl class="row">
    <dt class="col-sm-2">
        @Html.LabelFor(x => x.Company)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(x => x.Company)
    </dd>
    <dt class="col-sm-2">
        @Html.LabelFor(x => x.FirstName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(x => x.FirstName)
    </dd>
    <dt class="col-sm-2">
        @Html.LabelFor(x => x.LastName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(x => x.LastName)
    </dd>
    <dt class="col-sm-2">
        @Html.LabelFor(x => x.Address)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(x => x.Address)
    </dd>
    <dt class="col-sm-2">
        @Html.LabelFor(x => x.Telephone)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(x => x.Telephone)
    </dd>
</dl>

<a class="btn btn-primary mb-5 mr-2" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
<a class="btn btn-danger mb-5" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
<h4 class="mb-3">Product Catalog</h4>
<p>
    <a asp-action="Create">Add Product</a>
</p>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Make</th>
            <th>Supplier Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SupplierProducts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Make)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierPrice)
                </td>
                <td>
                    <a asp-controller="Suppliers" asp-action="Order" asp-route-productId="@item.ProductId" asp-route-supplierId="@item.Supplier.Id">Order</a>
                    @* | <a asp-controller="Stores" asp-action="Sell" asp-route-storeId="@item.StoreId" asp-route-productId="@item.ProductId">Sell</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="mt-4">
    <a asp-action="Index">Back to List</a>
</div>
